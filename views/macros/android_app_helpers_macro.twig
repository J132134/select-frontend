{% macro android_app_helpers(BASE_HOST) %}
<script>
  var isLoginRequired = function(url) {
    return false;
  };
  var isExternalLink = function(url) {
    var innerLinkRegex = /^{{ BASE_HOST }}|^\/\/{{ BASE_HOST }}|^https:\/\/{{ BASE_HOST }}|^\/(?=\w)/g;
    return !innerLinkRegex.test(url);
  };
</script>
{% endmacro %}
